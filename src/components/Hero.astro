---
export interface Props {
  title: string;
  subtitle?: string;
  backgroundImage?: string;
  centered?: boolean;
}

const { title, subtitle, backgroundImage, centered = true } = Astro.props;
---

<div class="hero min-h-[40vh] md:min-h-[50vh] relative overflow-hidden">
  {
    backgroundImage && (
      <div class="hero-overlay bg-opacity-60 absolute inset-0 bg-gradient-to-b from-transparent to-black/50" />
    )
  }
  <div
    class="hero-content text-center py-12 md:py-20 px-4 relative z-10"
    class:list={[{ 'text-center': centered }]}
    style={backgroundImage
      ? `background-image: url(${backgroundImage}); background-size: cover; background-position: center;`
      : ''}
  >
    <div class="max-w-4xl animate-fade-in">
      <h1
        class="text-3xl md:text-5xl lg:text-6xl font-bold mb-4 md:mb-6 font-heading leading-tight"
      >
        {
          backgroundImage ? (
            <span class="text-white drop-shadow-lg">{title}</span>
          ) : (
            <span class="text-gradient">{title}</span>
          )
        }
      </h1>
      {
        subtitle && (
          <p
            class="text-base md:text-lg lg:text-xl mb-6 md:mb-8 animate-slide-up leading-relaxed"
            class:list={[backgroundImage ? 'text-white/90' : 'text-base-content/80']}
          >
            {subtitle}
          </p>
        )
      }
      <slot />
    </div>
  </div>
</div>
